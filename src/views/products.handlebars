<div class="usuario">
  <h2>BIENVENIDO: {{email}}</h2>
  {{#if isAdmin}}
  <h3>(admin)</h3>
  {{/if}}
  {{#if role}}
  <h3>(user)</h3>
  {{/if}}
  <button onclick="location.href='/views/perfil'">Perfil</button>
</div>


<section class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">Estos son nuestros productos</h1>
    </div>
  </div>
</section>

  {{#each products.docs}}
  <div class="conteiner-fluid ">
    <div class="row d-flex justify-content-evenly">
        <div class="col-lg-4 col-md-6" style="width: 35rem;">
            <div data-aos="flip-up" class="card">
                <h3>Nombre: {{title}}</h3>
                <img src={{thumbnail}}  alt="">
                <button><a href="/views/products/{{_id}}">Ver producto</a></button>
            </div>
        </div>
      </div>
    </div>
  </div>
  
    {{/each}}

      {{#if products.hasPrevPage}}
      <button>
        <a href="/views/products/page/{{products.prevPage}}">Anterior</a>
      </button>
      {{/if}}

      {{#if products.hasNextPage}}
      <button>
        <a href="/views/products/page/{{products.nextPage}}">Siguiente</a>
      </button>
      {{/if}}

    </div>
  </div>
</section>


